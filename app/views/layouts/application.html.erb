<!DOCTYPE html>
<html>
<head>
  <title>Messenger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header id="top_header">
		<h1>Messenger-App</h1>
	</header>
	<section id="main_wrapper">
		<%= yield %>
	</section>
	<footer id="footer_menue">
		<ul>
			<% if !@current_user.nil? %>
				<li><%= link_to "Kontakte", contact_index_path %></li>
				<li><%= link_to "Chats", dashboard_index_path %></li>
				<li><%= link_to "Einstellungen", "#" %></li>
				<li><%= link_to "Logout", logout_path %></li>
			<% end %>
		</ul>
	</footer>
</body>
</html>
